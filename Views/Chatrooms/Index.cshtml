@model IEnumerable<Chatroom>
@{
    ViewData["Title"] = "Chatrooms";
}

<div class="text-center">
    <h1 class="display-4">Chatrooms</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">
                        <div class="card-body">
                            <h2 class="text-left">@item.Name</h2>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Chatrooms" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                                    <a asp-controller="Chatrooms" asp-action="Index" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Join</a>
                                    <a asp-controller="Chatrooms" asp-action="Index" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Enter</a>
                                </div>
                                <small class="text-muted">9 mins</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
