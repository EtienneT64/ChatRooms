@using ChatRooms.Helpers;
@using ChatRooms.ViewModels;
@model ChatViewModel

@{
    ViewData["Title"] = Model.ChatroomName + " Chat";
}

<h1>@Model.ChatroomName</h1>

<section style="background-color: #eee;">
    <div class="container py-5">

        <div class="row d-flex justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-6">

                <div class="card" id="chat2">
                    <div class="card-header d-flex justify-content-between align-items-center p-3">
                        <h5 class="mb-0">Chat</h5>
                        <a asp-area="" asp-controller="Chatrooms" asp-action="Index" id="leaveButton" class="btn btn-primary btn-sm" data-mdb-ripple-color="dark">
                            Leave
                        </a>
                    </div>

                    <div class="card-body" data-mdb-perfect-scrollbar="true" style="position: relative; height: 400px; max-height: 400px; overflow-y: auto;">
                            <div class="d-flex flex-row justify-content-start">
                                <div>
                                <ul id="messagesList" style="overflow-anchor: none;">
                                        @foreach (Message message in Model.Messages)
                                        {
                                            var timeStamp = FormatTime.FormatTimeStamp(message.TimeStamp, DateTime.Now);
                                        <li>@Html.Raw($"{Model.UserName} {timeStamp} {message.Content}")</li>
                                        }
                                </ul>
                                <div id="anchor" style="overflow-anchor: auto; height: 1px;"></div>
                                   
                                </div>
                            </div>
                    </div>

                    <div class="card-footer text-muted d-flex justify-content-start align-items-center p-3">
                            <form>
                            <div class="form-group">
                                <input type="hidden" id="chatroomName" name="ChatroomName" asp-for="@Model.ChatroomName" value="@Model.ChatroomName" />
                                <input type="hidden" id="userId" name="UserId" asp-for="@Model.UserId" value="@Model.UserId" />
                                <textarea type="text" id="messageContent" name="MessageContent" asp-for="@Model.MessageContent" class="form-control form-control-lg w-100t"
                                          placeholder="Type message" contenteditable="true"></textarea>
                                <span asp-validation-for="MessageContent" id="messageContentValidation" class="text-danger"></span>
                            </div>
                            <input type="button" id="sendButton" value="Send" class="btn btn-primary" />
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
<script src="https://cdn.tiny.cloud/1/vn4al8wrt0tehfuzhq2hhee80ufojm8bp90wb8onjk7rwjta/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
<script src="~/js/tinymceInit.js"></script>




