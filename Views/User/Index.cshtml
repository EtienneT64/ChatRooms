@using ChatRooms.ViewModels;
@model UserIndexViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="text-left">
    <h1 class="display-4">Profile</h1>
</div>

<section class="vh-100" style="background-color: #9de2ff;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-md-9 col-lg-7 col-xl-5">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-4">
                        <div class="d-flex text-black">
                            <div class="flex-shrink-0">
                                @if (Model.ProfileImageUrl != null)
                                {
                                    <img src="@Model.ProfileImageUrl" alt="Profile Picture" class="img-fluid" style="width: 180px; border-radius: 10px;">
                                }
                                else
                                {
                                    <img src="~/images/profile-picture-placeholder.png" alt="Profile Picture" class="img-fluid" style="width: 180px; border-radius: 10px;">
                                }
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5 class="mb-1">@Model.UserName</h5>
                                <p class="mb-2 pb-1" style="color: #2b2a2a;">Resident Chatter</p>
                                <div class="d-flex justify-content-start rounded-3 p-2 mb-2"
                                     style="background-color: #efefef;">
                                    <div>
                                        <p class="small text-muted mb-1">Owned Chatrooms</p>
                                        <p class="mb-0">@Model.OwnedChatrooms</p>
                                    </div>
                                    <div class="px-3">
                                        <p class="small text-muted mb-1">Pinned Chatrooms</p>
                                        <p class="mb-0">@Model.PinnedChatrooms</p>
                                    </div>
                                    <div>
                                        <p class="small text-muted mb-1">Total Messages</p>
                                        <p class="mb-0">@Model.UserMessages</p>
                                    </div>
                                </div>
                                <div class="d-flex pt-1">
                                    <a asp-area="" asp-controller="User" asp-action="Edit" asp-route-id="@Model.Id" type="button" class="btn btn-primary flex-grow-1">Edit</a>
                                    <a asp-area="" asp-controller="User" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger me-1 flex-grow-1">Delete</a>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}