@using ChatRooms.ViewModels;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@model DashboardViewModel
@{
	ViewData["Title"] = "Dashboard";
}

<h1 class="display-4 fw-normal">User Dashboard</h1>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Chatrooms" asp-action="Create">Create Chatroom</a>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Dashboard" asp-action="EditUserProfile">Edit User Profile</a>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <!-- Chatrooms Column -->
            <div class="col">
                <h2>User Chatrooms</h2>
                <ul class="list-group">
                    @foreach (var chatroom in Model.OwnedChatrooms)
                    {
                        <li class="list-group-item">@chatroom.Name</li>
                    }
                </ul>
            </div>

            <!-- Pinned Chatrooms Column -->
            <div class="col">
                <h2>Pinned Chatrooms</h2>
                <ul class="list-group">
                    @foreach (var pinnedChatroom in Model.PinnedChatrooms)
                    {
                        <li class="list-group-item">@pinnedChatroom.Name</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>